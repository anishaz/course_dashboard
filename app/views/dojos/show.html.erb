<h1><%= @dojo.branch %></h1>

<h3>Street Address: <%= @dojo.street %></h3>
<h3>City: <%= @dojo.city %></h3>
<h3>State: <%= @dojo.state %></h3>
<a href='/dojos/<%= @dojo.id %>/edit'>Edit Dojo Information</a>

<h2>Student Roster</h2>

<table>
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
      <td><a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>'>Show</a>|<a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit'>Edit</a>|<a href="#" data-confirm="Are you sure?" data-method="delete">Delete</a>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="/">Home</a>
<a href='/dojos/<%= @dojo.id %>/students/new'>Add Student</a>
