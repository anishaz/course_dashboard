<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>

<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
  <p><%= e %></p>
<% end %>
<% end %>

<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="patch">
  <label for="first_name">First Name:</label>
  <input type='text' name='student[first_name]' value="<%= @student.first_name %>">
  <label for="last_name">Last Name:</label>
  <input type='text' name='student[last_name]' value="<%= @student.last_name %>">
  <label for="email">Email Address:</label>
  <input type='text' name='student[email]' value="<%= @student.email %>">
  <label for="dojo">Dojo:</label>
  <select name='student[dojo_id]' value="<%= @student.dojo_id %>">
    <% @dojos.each do |dojo| %>
      <% if dojo == @dojo %>
        <option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
      <% else %>
        <option value="<%= dojo.id %>"><%= dojo.branch %></option>
      <% end %>
    <% end %>
  </select>
  <input type='submit' value='Update'>
</form>

<a href='/'>Home</a>|<a href='/dojos/<%= @dojo.id %>/students/<%= @student.id %>'><%= @student.first_name %></a>
