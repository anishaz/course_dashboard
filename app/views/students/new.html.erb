<h1>New Student</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<form action="/dojos/<%= @dojo.id %>/students" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="first_name">First Name:</label>
  <input type='text' name='student[first_name]'>
  <label for="last_name">Last Name:</label>
  <input type='text' name='student[last_name]'>
  <label for="email">Email Address:</label>
  <input type='text' name='student[email]'>
  <label for="dojo">Dojo:</label>
  <select name='student[dojo_id]'>
    <% @dojos.each do |dojo| %>
      <% if dojo == @dojo %>
        <option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
      <% else %>
        <option value="<%= dojo.id %>"><%= dojo.branch %></option>
      <% end %>
    <% end %>
  </select>
  <input type='submit' value='Create'>
</form>

<a href='/'>Home</a>|<a href='/dojos/<%= @dojo.id %>'><%= @dojo.branch %></a>
